<domain type='kvm'>
  <name>{{ hostname }}</name>
  <uuid>{{ uuid }}</uuid>
{% if mem_hotplug %}
  <maxMemory slots='16' unit='MiB'>{{ max_mem }}</maxMemory>
{% endif %}
  <memory unit='MiB'>{{ mem }}</memory>
{% if mem_hotplug %}
{% else %}
  <numatune>
{% if numa_interleave %}
    <memory mode='interleave' nodeset='0-1'/>
{% else %}
    <memory mode='strict' placement='auto'/>
{% endif %}
  </numatune>
{% endif %}
  <currentMemory unit='MiB'>{{ mem }}</currentMemory>
{% if mem_hotplug %}
  <vcpu placement='static' current='{{ num_cpu }}'>24</vcpu>
{% else %}
  <vcpu placement='auto' current='{{ num_cpu }}'>24</vcpu>
{% endif %}
  <os>
    <type arch='x86_64' machine='pc-i440fx-2.1'>hvm</type>
    <kernel>/vmlinuz</kernel>
    <initrd>/initrd.img</initrd>
    <cmdline>root=/dev/vda ro 2 console=ttyS0 init=/sbin/init rootflags=allocsize=64k elevator=noop</cmdline>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic eoi='on'/>
    <hap/>
  </features>
{% if mem_hotplug %}
{% if dsthv_hw_model in ['Dell_M610'] %}
  <cpu mode='custom' match='exact'>
    <model fallback='allow'>Nehalem</model>
{% elif dsthv_hw_model in ['Dell_M620', 'Dell_M630'] %}
  <cpu mode='custom' match='exact'>
      <model fallback='allow'>SandyBridge</model>
{% else %}
  <cpu>
{% endif %}
    <numa>
      <cell id='0' cpus='0-23' memory='{{ mem }}' unit='MiB'/>
    </numa>
  </cpu>
{% endif %}
  <clock offset='utc' adjustment='reset'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <emulator>/usr/bin/kvm</emulator>
    <disk type='block' device='disk'>
      <driver name='qemu' type='raw' cache='none' io='native'/>
      <source dev='{{ device }}'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <controller type='pci' index='0' model='pci-root'/>
    <!-- usb can only be disabled with model none -->
    <controller type='usb' index='0' model='none'/>
    <controller type='virtio-serial' index='0'>
    </controller>
    <interface type='bridge'>
      <source bridge='br0'/>
{% if vlan_tag %}
      <vlan>
        <tag id='{{ vlan_tag }}'/>
      </vlan>
{% endif %}
      <virtualport type='openvswitch'/>
      <model type='virtio'/>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <memballoon model='none'>
    </memballoon>
  </devices>
</domain>

{
    "basic": {
        "constraints": [
            {
                "name": "Hypervisor is in same route network",
                "class": "RouteNetwork"
            },
            {
                "name": "Hypervisor has enough disk space",
                "class": "DiskSpace",
                "reserved": 5192.0
            },
            {
                "name": "Hypervisor has enough memory",
                "class": "Memory"
            },
            {
                "name": "Don't migrate two webservers of the same world on one HV",
                "class": "GameWorldDistribution"
            },
            {
                "name": "Don't migrate two master-dbs of different markets/games on one HV",
                "class": "GameMasterDbDistribution",
                "db_types": ["db"]
            },
            {
                "name": "Hypervisor Max 95 vCPU usage < than 45%",
                "class": "HypervisorMaxVcpuUsage",
                "threshold": "45.0"
            }
        ],
        "rules": [
            {
                "name": "Find less loaded Hypervisor",
                "class": "HypervisorMaxCpuUsage",
                "weight": 1,
                "time_range": "-1w"
            },
            {
                "name": "Don't put too many hosts of one market on one HV",
                "class": "GameMarketDistribution"
            },
            {
                "name": "Less overallocated (cpu) HVs first",
                "class": "CpuOverAllocation"
            }
        ]
    }
}

{
    "basic": {
        "constraints": [
            {
                "name": "Hypervisor is in same route network",
                "class": "RouteNetwork"
            },
            {
                "name": "Hypervisor has enough disk space",
                "class": "DiskSpace",
                "reserved": 5192.0
            },
            {
                "name": "Hypervisor has enough memory",
                "class": "Memory"
            },
            {
                "name": "Hypervisor Max 95 vCPU usage < than 45%",
                "class": "HypervisorMaxVcpuUsage",
                "threshold": "45.0"
            },
            {
                "name": "Don't migrate two webservers of the same function on one HV",
                "class": "EnsureFunctionDistribution"
            }
        ],
        "rules": [
            {
                "name": "Find less loaded Hypervisor",
                "class": "HypervisorMaxCpuUsage",
                "weight": 1
            },
            {
                "name": "Less overallocated (cpu) HVs first",
                "class": "CpuOverAllocation"
            }
        ]
    }
}

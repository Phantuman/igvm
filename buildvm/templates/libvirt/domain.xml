<domain type='xen'>
  <name>{{ hostname }}</name>
  <uuid>{{ uuid }}</uuid>
  <memory unit='MiB'>{{ mem_size }}</memory>
  <currentMemory unit='MiB'>{{ mem_size }}</currentMemory>
  <vcpu placement='static' current='{{ num_vcpus }}'>24</vcpu>
  <bootloader></bootloader>
  <os>
    <type>linux</type>
    <kernel>/boot/vmlinuz-2.6-xenU</kernel>
    <cmdline>root=/dev/xvda1 ro 2 init=/sbin/init console=hvc0 rootflags=allocsize=64k mem={{ max_mem }}M elevator=noop</cmdline>
  </os>
  <clock offset='utc' adjustment='reset'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <disk type='block' device='disk'>
      <driver name='phy'/>
      <source dev='{{ device }}'/>
      <target dev='xvda1' bus='xen'/>
    </disk>
    <interface type='ethernet'>
      <source bridge='br0'/>
      <script path='/etc/xen/scripts/vif-bridge'/>
    </interface>
    <console type='pty' tty='/dev/pts/1'>
      <source path='/dev/pts/1'/>
      <target type='xen' port='0'/>
    </console>
  </devices>
</domain>


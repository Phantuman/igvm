auto lo
iface lo inet loopback
auto eth0
iface eth0 inet static
    address {{ iface_primary_ip.ip }}
    netmask {{ iface_primary_ip.netmask }}{% if iface_primary_ip.gateway %}
    gateway {{ iface_primary_ip.gateway }}{% endif %}
    up . /etc/network/routes{% if setup_loadbalancer %}
    up . /etc/network/lb
{% endif %}
